[flake8]
# Line length should match the formatter (~/pyproject.toml)
max-line-length = 88

# Excluded directories
exclude =
    .git,
    __pycache__,
    build,
    dist

select =
    # Complexity checks
    C,
    # PEP8 errors
    E,
    # Pyflakes checks
    F,
    # PEP8 warnings
    W,
    # Bugbear checks
    B

ignore =
    # Whitespace before ':'
    E203,
    # Too many leading '#' for block comments
    E266,
    # Unused module
    F401,
    # Unused star imports
    F403
    # Possibly defined name of star import
    F405